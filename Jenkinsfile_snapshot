pipeline {
    agent any

    stages {
        stage('1. Checkout Code') {
            steps { checkout scm }
        }

        stage('2. Instalar Dependencias AWS') {
             steps {
                 sh 'pip3 install boto3 botocore --user'
             }
        }

        stage('3. Tomar Snapshots Forenses (AWS)') {
            steps {
                echo '¡¡ALERTA!! Ejecutando playbook de snapshot forense...'
                withCredentials([
                    sshUserPrivateKey(credentialsId: 'aws-ec2-key-leomed', keyFileVariable: 'KEY_LEOMED'),
                    sshUserPrivateKey(credentialsId: 'aws-ec2-key-fernando', keyFileVariable: 'KEY_FERNANDO')
                ]) {
                    sh """
                        # Aseguramos que Python encuentre las librerías que acabamos de instalar
                        export PYTHONPATH=/var/lib/jenkins/.local/lib/python3.10/site-packages
                        
                        eval \$(ssh-agent -s)
                        ssh-add ${env.KEY_LEOMED}
                        ssh-add ${env.KEY_FERNANDO}
                        
                        # EJECUTA EL PLAYBOOK DE SNAPSHOTS
                        ansible-playbook -i hosts.ini playbook_snapshot.yml
                        
                        ssh-agent -k
                    """
                }
            }
        }
    }
    
    post {
        always { echo '¡NOTIFICACIÓN! Se ha ejecutado el snapshot forense de AWS.' }
    }
}